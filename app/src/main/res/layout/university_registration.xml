<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.readhtml.surajjorwekar.microu.Register.UniversityRegistration">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#007ba6"
                android:measureWithLargestChild="false"
                android:layout_weight="90">

                <!-- <ImageView
                     android:layout_width="fill_parent"
                     android:layout_height="115dp"
                     android:id="@+id/imageView"
                     android:src="@drawable/uvu"
                     android:contentDescription="@string/ProfilePicture"
                     android:paddingTop="10dp" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/create"
                    android:layout_gravity="center"
                    android:paddingTop="2dp"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="Create New Application"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@android:color/background_light"
                android:layout_weight="10">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6b716d"
                        android:text="@string/fa_icon_user"
                        android:id="@+id/t0"
                        android:paddingLeft="16dp"
                        android:textSize="15dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/hname"
                        android:paddingLeft="10dp"
                        android:hint="Header Name"
                        android:textColor="#6b716d"
                        android:textColorHint="#848b86" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6b716d"
                        android:text="@string/fa_icon_user"
                        android:id="@+id/t1"
                        android:paddingLeft="16dp"
                        android:textSize="15dp"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/fname"
                        android:paddingLeft="10dp"
                        android:hint="Full Name"
                        android:textColor="#6b716d"
                        android:textColorHint="#848b86" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6b716d"
                        android:text="@string/fa_icon_gender"
                        android:id="@+id/t4"
                        android:paddingLeft="16dp"
                        android:textSize="15dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/gender"
                        android:paddingLeft="10dp"
                        android:autoText="false"
                        android:hint="Gender"
                        android:textColorHint="#848b86"
                        android:textColor="#6b716d" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6b716d"
                        android:text="@string/fa_icon_mobile"
                        android:id="@+id/t2"
                        android:paddingLeft="16dp"
                        android:textSize="20dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:ems="10"
                        android:id="@+id/phone"
                        android:hint="Phone Number"
                        android:textColor="#6b716d"
                        android:textColorHint="#848b86"
                        android:paddingLeft="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6b716d"
                        android:text="@string/fa_icon_envelope"
                        android:id="@+id/t3"
                        android:paddingLeft="16dp"
                        android:textSize="13sp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:id="@+id/mail"
                        android:paddingLeft="10dp"
                        android:hint="E-Mail"
                        android:textColorHint="#848b86"
                        android:textColor="#6b716d" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:layout_marginTop="7dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6b716d"
                        android:text="@string/fa_icon_birthday"
                        android:id="@+id/t6"
                        android:paddingLeft="16dp"
                        android:textSize="17dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:id="@+id/dob"
                        android:paddingLeft="10dp"
                        android:hint="Date of Birthdate"
                        android:textColorHint="#848b86"
                        android:textColor="#6b716d" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:layout_marginTop="7dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6b716d"
                        android:text="@string/fa_icon_home"
                        android:id="@+id/t5"
                        android:paddingLeft="16dp"
                        android:textSize="17dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress"
                        android:ems="10"
                        android:id="@+id/address"
                        android:paddingLeft="10dp"
                        android:textColor="#6b716d"
                        android:textColorHint="#848b86"
                        android:hint="Address" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#6b716d"
                        android:text="@string/fa_icon_user"
                        android:id="@+id/t7"
                        android:paddingLeft="16dp"
                        android:textSize="15dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/url"
                        android:paddingLeft="10dp"
                        android:hint="URL of image"
                        android:textColor="#6b716d"
                        android:textColorHint="#848b86" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
